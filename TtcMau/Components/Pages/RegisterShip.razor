@page "/register-ship"
@inject ShipRegistrationViewModel ViewModel
@inject NavigationManager Navigation

<h3>Ship Registration</h3>

<EditForm Model="ViewModel" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label>Ship Name:</label>
        <InputText @bind-Value="ViewModel.ShipName" />
    </div>

    <div>
        <label>Email:</label>
        <InputText @bind-Value="ViewModel.Email" />
    </div>

    <div>
        <label>Password:</label>
        <InputText @bind-Value="ViewModel.Password" type="password" />
    </div>

    <div>
        <label>Type:</label>
        <InputText @bind-Value="ViewModel.Type" />
    </div>

    <div>
        <label>Uniek Europees Scheepsidentificatienummer:</label>
        <InputText @bind-Value="ViewModel.UniekEuropeesScheepsidentificatienummer" />
    </div>

    <div>
        <label>Location:</label>
        <InputText @bind-Value="ViewModel.Location" />
    </div>

    <button type="submit">Register</button>
</EditForm>

@code {
    private async Task HandleValidSubmit()
    {
        await ViewModel.RegisterShipAsync(Navigation);
    }
}
