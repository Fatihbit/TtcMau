@page "/register-terminal"
@inject TerminalRegistrationViewModel ViewModel
@inject NavigationManager Navigation

<h3>Terminal Registration</h3>

<EditForm Model="ViewModel" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div>
        <label>Terminal Name:</label>
        <InputText @bind-Value="ViewModel.TerminalName" />
    </div>

    <div>
        <label>Email:</label>
        <InputText @bind-Value="ViewModel.Email" />
    </div>

    <div>
        <label>Password:</label>
        <InputText @bind-Value="ViewModel.Password" type="password" />
    </div>

    <div>
        <label>Location:</label>
        <InputText @bind-Value="ViewModel.Location" />
    </div>

    <button type="submit">Register</button>
</EditForm>

@code {
    private async Task HandleValidSubmit()
    {
        await ViewModel.RegisterTerminalAsync(Navigation);
    }
}
